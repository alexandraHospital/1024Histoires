<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   	android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tvBoutonChoix"
        android:layout_width="fill_parent"
        android:focusable="false"
        style="@style/texteTitreImportant"
  		android:focusableInTouchMode="false"
        android:layout_height="35dp"
        android:layout_weight="38" />

    <TextView
        android:id="@+id/tvTexte"
        style="@style/texteNormal"
        android:layout_width="fill_parent"
        android:focusable="false"
  		android:focusableInTouchMode="false"
        android:layout_height="35dp"
        android:layout_weight="35"
        android:maxLength="13"
        android:textSize="13sp" />
    
    <TextView
        android:id="@+id/tvObjetRequis"
        style="@style/texteNormal"
        android:layout_width="fill_parent"
        android:focusable="false"
  		android:focusableInTouchMode="false"
        android:layout_height="35dp"
        android:layout_weight="30"
        android:maxLength="18"
        android:textSize="13sp" />

   <Button
        android:id="@+id/supprimerChoix"
        style="@style/boutonNormal"
        android:focusable="false"
    android:background="@drawable/poubelle"
  		android:focusableInTouchMode="false"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_weight="43"
        android:gravity="center" />

</LinearLayout>
