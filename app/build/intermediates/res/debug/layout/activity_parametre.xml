<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="paramatres.ParametresActivity"
    tools:ignore="MergeRootFrame" >

    <TextView
        android:id="@+id/param_titre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/setting_title"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Switch
        android:id="@+id/switch_lettrine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/input_defaut_author_name"
        android:layout_alignTop="@+id/textView3" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/switch1"
        android:layout_alignTop="@+id/textView5" >
    </RadioGroup>

    <RadioButton
        android:id="@+id/radio_petit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/radio_moyen"
        android:layout_alignTop="@+id/textView4"
        android:checked="true"
        android:text="@string/small" />

     <RadioButton
         android:id="@+id/radio_moyen"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignRight="@+id/switch_lettrine"
         android:layout_below="@+id/radio_petit"
         android:text="@string/medium" />
     
    <RadioButton
        android:id="@+id/radio_grand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/radio_moyen"
        android:layout_below="@+id/radio_moyen"
        android:text="@string/large" />

    <EditText
        android:id="@+id/input_defaut_author_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:ems="10"
        android:gravity="right"
        android:inputType="textCapSentences" />

    <Switch
        android:id="@+id/son_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/input_defaut_author_name"
        android:layout_alignTop="@+id/ip_public" />

    <TextView
        android:id="@+id/ip_public"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="20dp"
        android:text="@string/label_sound"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/switch_lettrine"
        android:layout_marginTop="20dp"
        android:text="@string/size"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ip_public"
        android:layout_below="@+id/son_switch"
        android:layout_marginTop="20dp"
        android:text="@string/lettrine"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/button_save_param"
        style="@style/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/save" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/radioGroup1"
        android:layout_below="@+id/param_titre"
        android:layout_marginTop="20dp"
        android:text="@string/label_defaut_author"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout><!-- From: file:/Volumes/HDD-WORK/Work%20Space/Android/Android%20-%201024%20Histoires/app/src/main/res/layout/activity_parametre.xml -->