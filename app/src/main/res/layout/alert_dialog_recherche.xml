<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/keyword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/search_keyword"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/keyword_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/keyword"
        android:inputType="textCapSentences"
        android:layout_toRightOf="@+id/keyword"
        android:ems="10" />

    <TextView
        android:id="@+id/statut_envois"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/keyword_input"
        android:layout_marginTop="10dp"
        android:text="@string/search_in"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <CheckBox
        android:id="@+id/check_titre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/keyword_input"
        android:layout_alignTop="@+id/statut_envois"
        android:layout_marginLeft="15dp"
        android:text="@string/search_title" />

    <CheckBox
        android:id="@+id/check_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/check_titre"
        android:layout_below="@+id/check_titre"
        android:layout_marginTop="5dp"
        android:text="@string/search_author" />

    <CheckBox
        android:id="@+id/check_synopsis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/check_author"
        android:layout_below="@+id/check_author"
        android:layout_marginTop="5dp"
        android:text="@string/search_synopsis" />

    <CheckBox
        android:id="@+id/check_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/check_synopsis"
        android:layout_below="@+id/check_synopsis"
        android:layout_marginTop="5dp"
        android:text="@string/search_content" />

</RelativeLayout>
